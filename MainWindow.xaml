<Window x:Class="WpfCSCS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCSCS"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="306" Width="542">
    <Window.Resources>
        <sys:String x:Key="CSCS">../../scripts/start.cscs</sys:String>
    </Window.Resources>

    <Grid Margin="0,0,4,95.2">
        <TextBox HorizontalAlignment="Left"  Height="23" Margin="110,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="278" DataContext="InitFile"/>
        <Label Content="Start File:" HorizontalAlignment="Left" Margin="30,108,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Browse" HorizontalAlignment="Left" Margin="403,111,0,0" VerticalAlignment="Top" Width="75" DataContext="Browse" />
        <Button Content="Start" HorizontalAlignment="Left" Height="23" Margin="110,158,0,-0.2" VerticalAlignment="Top" Width="102" DataContext="Start"/>
        <Button Content="Exit" HorizontalAlignment="Left" Height="23" Margin="286,158,0,-0.2" VerticalAlignment="Top" Width="102" DataContext="Exit"/>
    </Grid>
</Window>
